<div class="container px-5 px-sm-o">
    <div class="row mt-3">
        <div class="col-md-3">
            <% if @book.errors.any? %>
                <div id="error_explanation">
                    <div class="error"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</div>
                        <ul>
                        <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                        </ul>
                    </div>
            <% end %>
            <%= render 'users/user_template', user:@user %>
            <%= render 'books/book_template', book:@book %>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table"> 
                <thead>
                    <tr>
                        <th></th>
                        <th>タイトル</th>
                        <th>本の内容</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |books| %>
                    <tr>
                        <td><%= link_to user_path(books.user) do %>
                            <%= attachment_image_tag books.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                        <% end %>
                        <td><%= link_to books.title, book_path(books) %></td>
                        <td><%= books.body %></td>
                    </tr>
                            <% end %>
                </tbody>
            </table>
        </div>
        </div>
</div>
