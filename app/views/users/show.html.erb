<div class="container px-5 px-sm-0">
    <div class="row mt-3">
        <div class="col-md-3">
            <%= render 'users/user_template', user:@user %>
            <%= render 'books/book_template', book:@book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h4>投稿者の本一覧</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>プロフ画像</th>
                        <th>タイトル</th>                        
                        <th>本の感想</th>
                    </tr>
                
                </thead>
                <% @books.each do |f| %>
                <tbody>
                    <tr>
                    <td><%= link_to user_path(@user) do %>
                        <%= attachment_image_tag @user , :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                        <% end %>
                    </td>    
                    <td><%= link_to f.title, book_path(f) %></td>
                    <td><%= f.body %></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>