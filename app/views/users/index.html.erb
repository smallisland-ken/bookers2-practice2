<div class="container px-5 px-sm-0">
    <div class="row mt-3">
        <div class="col">
            <%= render '/users/user_template', user:@user %>
            <%= render 'books/book_template', book:@book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>ユーザー情報</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>プロフ画像</th>
                        <th>名前</th>
                        <th>紹介文</th>
                        <th>プロフィール</th>
                    </tr>
                </thead>
            <tbody>
            <% @users.each do |f| %>
                <tr>
                    <td><%= attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>    
                    <td><%= f.name %></td>
                    <td><%= f.introduction %></td>
                    <td><%= link_to "Show", user_path(f) %></td>
                </tr>
            <% end %>
            </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
